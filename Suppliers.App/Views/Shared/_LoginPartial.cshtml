@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown">
        <span class=" dropdown-toggle" type="button" id="dropdownMenuUser"
            data-bs-toggle="dropdown" aria-expanded="false">
            @User.Identity.Name
        </span>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuUser">
            <li>
                <form asp-controller="Account" asp-action="SignOut" method="post">
                    <input type="submit" class="dropdown-item" value="SignOut" />
                </form>
            </li>
        </ul>
    </div>
}

else
{
    <div class="dropdown">
        <span class=" dropdown-toggle" type="button" id="dropdownMenuUser"
            data-bs-toggle="dropdown" aria-expanded="false">
            Account
        </span>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuUser">
            <li>
                <a class="dropdown-item" asp-controller="Account" asp-action="SignIn">
                    Login
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Account" asp-action="SignIn">
                    Register    
                </a>
            </li>
        </ul>
    </div>
}
